<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/bg_result"
        android:fontFamily="sans-serif"
        android:gravity="end|center"
        android:padding="15dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="55sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_ac"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_ac"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_qavs"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btns"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="(  )"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_foiz"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btns"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_bolish"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btns"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="÷"
            android:textColor="@color/black"
            android:textSize="43sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_multiply"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btns"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="×"
            android:textColor="@color/black"
            android:textSize="43sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_minus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btns"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="43sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_plus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btns"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="43sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_nuqta"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="."
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_clearone"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_nmrs"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="⌫"
            android:textColor="@color/black"
            android:textSize="43sp" />

        <TextView
            android:id="@+id/btn_teng"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btns"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="="
            android:textColor="@color/black"
            android:textSize="43sp" />
    </LinearLayout>


</LinearLayout>